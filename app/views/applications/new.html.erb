<%= form_with url: "/applications", method: :post, local: true do |form| %>
  <%= form.label :first_name %>
  <%= form.text_field :first_name, null: false %>
  <%= form.label :last_name %>
  <%= form.text_field :last_name, null: false %>
  <%= form.label :street_address %>
  <%= form.text_field :street_address, null: false %>
  <%= form.label :city  %>
  <%= form.text_field :city, null: false %>
  <%= form.label :state %>
  <%= form.text_field :state, null: false %>
  <%= form.label :zip_code %>
  <%= form.number_field :zip_code, null: false %>
  <%= form.label :application_status %>
  <%= form.text_field :application_status  %>
  <%= form.submit 'Create Application' %>

<% end %>
